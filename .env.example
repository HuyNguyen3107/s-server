# Database Configuration (Railway PostgreSQL sẽ tự động cung cấp)
DATABASE_URL=postgresql://user:password@host:5432/database?schema=public

# Server Configuration
PORT=3001
NODE_ENV=production

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_REFRESH_EXPIRES_IN=7d

# Super Admin Configuration (tùy chọn - nếu không set sẽ dùng giá trị mặc định)
SUPER_ADMIN_EMAIL=superadmin@soligant.com
SUPER_ADMIN_PASSWORD=SuperAdmin@2024
SUPER_ADMIN_NAME=Super Administrator
SUPER_ADMIN_PHONE=0999999999

# Cloudinary Configuration (nếu sử dụng)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
 
# CORS
# Set the allowed origin for browser requests (only this origin will be accepted).
# Example: CORS_ORIGIN=https://example.com
CORS_ORIGIN=
